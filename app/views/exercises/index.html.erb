<h1>Listing exercises</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>pic1</th>
    <th>How to</th>
    <th>pic2</th>
    <th>How not to</th>
    <th>Info</th>
    <th>Type</th>
  </tr>

<% @exercises.each do |exercise| %>
  <tr>
    <td><%=h exercise.name %></td>
    <td><%=h exercise.description && exercise.description[0..30] %></td>
    <td><%= image_tag("exercises/#{clean_name(exercise.name).capitalize}.jpg" ,:size => "100x100") %> </td>
    <td><%=h exercise.how_to && exercise.how_to[0..30] %></td>
    <td><%= image_tag("exercises/#{clean_name(exercise.name).capitalize}1.jpg" ,:size => "100x100") %> </td>

    <td><%=h exercise.how_not_to && exercise.how_not_to[0..30] %></td>
    <td><%=h exercise.info && exercise.info[0..30] %></td>
    <td><%=h exercise.exercise_type %></td>
    <td><%= link_to 'Show', exercise %></td>
    <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
    <td><%= link_to 'Destroy', exercise, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

